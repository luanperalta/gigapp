 <script>
      $.notify("<%= notice %>", "success");
  </script>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-4">
        <h2>Produtos</h2>
      </div>
      <!--   search  -->
        <%= render partial: 'shared/search' %>
        <!-- ######### -->

    </div>
  </div>
      <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th><%= sort_link(@q, :name, "#{@products.model.human_attribute_name('name')}" ) %></th>
                  <th><%= sort_link(@q, :description, "#{@products.model.human_attribute_name('description')}" ) %></th>
                  <th><%= sort_link(@q, :supplier_name, "#{@products.model.human_attribute_name('suppliers')}" ) %></th>
                  <th colspan="3"></th>
                </tr>
              </thead>

            <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.description %></td>
                <td><%= product.supplier.name %></td>
                <td><%= link_to t('buttons.edit'), edit_product_path(product), class: "btn btn-primary" %></td>
                <td><%= link_to t('buttons.destroy'), product, method: :delete, data: { confirm: t('messages.confirm_product') }, class: "btn btn-danger" %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <div class="pull-right">
            
            <%= paginate @products %>
          </div>
          <%= link_to t('buttons.new'), new_product_path, class: "btn btn-success" %>
        </div>
                            <!-- /.table-responsive -->
      </div>
                        <!-- /.panel-body -->
</div>
                    <!-- /.panel -->
