<script>
      $.notify("<%= notice %>", "success");
  </script>
<div class="row">
  <div class="col-md-2">
  </div>  
  <div class="col-md-8">
    <h1>Fornecedor</h1>
      <div class="row">
        <div class="col-md-2">
          <strong>Name: </strong>
        </div>
        <div class="col-md-6">
          <%= @supplier.name %>
        </div> 
      </div> 
      <div class="row">
      <div class="col-md-2">
         <strong>Cidade:</strong>
      </div>  
        <div class="col-md-6">
          <%= @supplier.city %>
        </div>  
      </div>
      <div class="row">
      <div class="col-md-2">
          <strong>Endere√ßo</strong>
      </div>  
        <div class="col-md-6">
          <%= @supplier.address %>
        </div>  
      </div>
      <div class="row">
      <div class="col-md-2">
         <strong>Bairro:</strong>
      </div>  
        <div class="col-md-6">
          <%= @supplier.district %>
        </div>  
      </div>
      <div class="row">
      <div class="col-md-2">
         <strong>Numero:</strong>
      </div>  
        <div class="col-md-6">
          <%= @supplier.number %>
        </div>  
      </div>
     
  <br>

  <div class="row">
    <% if !@supplier.emails.nil? %>
      <div class="col-md-6">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>E-mail</th>
                <th>Referencia</th>
              </tr>
            </thead>
            <tbody>
              <% @supplier.emails.each do |email| %>
                <tr>
                  <td><%= email.email %></td>
                  <td><%= email.reference %></td>
                </tr>
              <% end %>  
            </tbody>
          </table>    
        </div>
      </div>
    <% end %>
    <% if !@supplier.phones.nil? %>
      <div class="col-md-6">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>DDD</th>
                <th>Numero</th>
                <th>Referencia</th>
              </tr>
            </thead>
            <tbody>
              <% @supplier.phones.each do |phone| %>
                <tr>
                  <td><%= phone.areacode %></td>
                  <td><%= phone.number %></td>
                  <td><%= phone.reference %></td>
                </tr>
              <% end %>  
            </tbody>
          </table>    
        </div>
      </div>
    <% end %>
  </div>
  
  <div>
    <%= link_to t('buttons.edit'), edit_supplier_path(@supplier), class: "btn btn-success" %>
<%= link_to t('buttons.back'), supplier_path, class: "btn btn-primary" %>
  </div>
  
</div>
  <div class="col-md-2">
    <%= render partial: "layouts/shared/navigation" %>
  </div>

  

