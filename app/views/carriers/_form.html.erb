<%= form_with(model: carrier, local: true) do |form| %>


  
  <div class="row">
      <div class="col-md-2">  
  <% if carrier.errors.any? %>
    <div id="error_explanation">
      <h3><%= "#{pluralize(carrier.errors.count, '')} #{t('messages.errors')}:" %></h3>

      <ul>
      <% carrier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </div>
  <div class="col-md-8">
    <h1> Transportadoras </h1>
    <div class="row">
      <div class="col-md-2">
        <%= form.label :name %>
      </div>
      <div class="col-md-4">
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>
    <br>
     
        <div class="actions">
          <%= form.submit 'Gravar', class: "btn btn-primary" %>
          <%= link_to 'Voltar', carriers_path, class: "btn btn-success" %>
        </div>
      
        
  </div>

   <!-- Menu lateral -->
 <div class="col-md-2">
    <%= render partial: "layouts/shared/navigation" %>
</div>
</div>

<% end %>
