 <script>
      $.notify("<%= notice %>", "success");
</script>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-4">
        <h2>Transportadoras</h2>
      </div>
      <div class="col-md-4" >
        <%= render partial: 'shared/search' %>
      </div>

    </div>
      <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th><%= sort_link(@q, :name, "#{@carriers.model.human_attribute_name('name')}" ) %></th>
                  <th colspan="2"></th>
                </tr>
              </thead>
              <tbody>
                <% @carriers.each do |carrier| %>
                  <tr>
                    <td><%= carrier.name %></td>
                    <td style="width: 130px"><%= link_to t('buttons.edit'), edit_carrier_path(carrier), class: "btn btn-primary" %></td>
                    <td style="width: 130px"><%= link_to t('buttons.destroy'), carrier, method: :delete, data: { confirm: t('messages.confirm_carrier') }, class: "btn btn-danger" %></td>
                    </tr>
                <% end %>
              </tbody>
            </table>
            <div class="pull-right">
            
            <%= paginate @carriers %>
          </div>
            <div>
            <%= link_to t('buttons.new'), new_carrier_path, class: "btn btn-success" %>
          </div>
          </div>
                            <!-- /.table-responsive -->
      </div>
                        <!-- /.panel-body -->
</div>

  
    

